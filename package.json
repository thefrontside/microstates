{
  "name": "microstates",
  "version": "0.3.0",
  "description": "Graceful state transitions for data of any shape.",
  "keywords": [
    "blood",
    "immutable",
    "microstates"
  ],
  "homepage": "https://github.com/cowboyd/microstates.js#readme",
  "bugs": {
    "url": "https://github.com/cowboyd/microstates.js/issues"
  },
  "license": "MIT",
  "author": "Charles Lowell <charles@frontside.io>, Taras Mankovski <taras@thisdot.co>",
  "files": [
    "src/**/*"
  ],
  "main": "cjs.js",
  "module": "src/index.js",
  "repository": "git+ssh://git@github.com/cowboyd/microstates.js.git",
  "scripts": {
    "precommit": "lint-staged",
    "coverage": "npm test -- --coverage --no-cache",
    "coverage:watch": "npm run coverage -- --watch",
    "prerelease": "npm test",
    "release": "npm pack",
    "pretest": "node bin/monkey-patch-funcadelic.js",
    "test": "jest",
    "posttest": "node bin/un-monkey-patch-funcadelic.js",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "@std/esm": "^0.14.0",
    "funcadelic": "^0.3.0",
    "object.getownpropertydescriptors": "2.0.3",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-jest": "21.2.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-preset-env": "1.6.0",
    "husky": "0.14.3",
    "jest": "^21.1.0",
    "jsonfile": "^4.0.0",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2"
  },
  "jest": {
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(js)$",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!funcadelic)"
    ]
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
